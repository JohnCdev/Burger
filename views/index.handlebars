<div class="wrapper">
    <div>
        <img src="/assets/images/burger.png" alt="burger_image">
    </div>

    <div class="lists">
        <ul id="burgers">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="lists">
        <ul id="consumed">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div>
        <textarea name="" id="burgerName" cols="30" rows="10"></textarea>
    </div>

    <div>
        <button id="newBurger">Submit</button>
        <p>Enter a burger you want to eat click the "Submit" button</p>
    </div>
</div>